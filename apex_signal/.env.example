# ============================================
# APEX SIGNAL™ — Environment Configuration
# ============================================

# --- Application ---
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
SYMBOLS=BTC/USD,ETH/USD,SPY,AAPL,TSLA
SCAN_INTERVAL=10.0

# --- Alpaca (Primary Live Feed) ---
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# --- Polygon (Secondary Cross-Check) ---
POLYGON_API_KEY=your_polygon_api_key
POLYGON_BASE_URL=https://api.polygon.io

# --- CoinGecko / CoinCap (Crypto Tertiary) ---
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINCAP_BASE_URL=https://api.coincap.io/v2

# --- Data Verification ---
POLL_TIMEOUT_SECONDS=5.0
DEVIATION_THRESHOLD=0.005
CACHE_TTL_SECONDS=30

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TG_RATE_LIMIT=1.0
TG_QUIET_START=2
TG_QUIET_END=6
TG_MAX_RETRIES=3
TG_RETRY_DELAY=2.0

# --- Database ---
DATABASE_URL=sqlite+aiosqlite:///apex_signal.db
DB_ECHO_SQL=false

# --- Machine Learning ---
ML_MODEL_DIR=ml/models
ML_TRAIN_LOOKBACK=90
ML_RETRAIN_INTERVAL=24
ML_TP_PIPS=20.0
ML_SL_PIPS=10.0

# --- Reinforcement Learning ---
RL_LEARNING_RATE=0.001
RL_GAMMA=0.99
RL_EPISODES=500
RL_RISK_PENALTY=0.1
RL_DRAWDOWN_PENALTY=0.2

# --- Backtesting ---
BT_INITIAL_CAPITAL=100000.0
BT_COMMISSION_PCT=0.001
BT_SLIPPAGE_PCT=0.0005
BT_POSITION_SIZE_PCT=0.02